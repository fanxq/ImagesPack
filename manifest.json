{
	  "name": "package images",
	  "description": "批量下载网页中图片",
	  "version": "1.0",
	  "permissions": [
	    "tabs","activeTab","http://*/*","https://*/*"
		],
		"icons": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		},
	  "background": {
			"scripts":["background.js"],
	    "persistent": false
	  },
	  "browser_action": {
	    "default_title": "图片打包下载",
			"default_icon":"icon16.png"
		},
		"content_scripts":[
			{
				"matches":["http://*/*","https://*/*"],
				"js":["main.js"]
			}
		],
	  "manifest_version": 2
}